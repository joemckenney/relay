{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!dist", "!sdk", "!spec"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
